<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Jellyfin.Orsay.Installer.ViewModels.Pages"
             xmlns:conv="using:Jellyfin.Orsay.Installer.Converters"
             mc:Ignorable="d"
             x:Class="Jellyfin.Orsay.Installer.Views.Pages.TvInstructionsPage"
             x:DataType="vm:TvInstructionsPageViewModel">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*" Margin="24">

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding L[TvSetup.Title]}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,16"/>

        <!-- IP Address Banner -->
        <Border Grid.Row="1"
                Background="#2C3E50"
                CornerRadius="12"
                Padding="24,16"
                Margin="0,0,0,20">
            <StackPanel HorizontalAlignment="Center" Spacing="8">
                <TextBlock Text="{Binding L[TvSetup.IpBanner]}"
                           FontSize="14"
                           Foreground="#BDC3C7"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding IpAddressDisplay}"
                           FontSize="28"
                           FontWeight="Bold"
                           FontFamily="Consolas, monospace"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Series Selector -->
        <StackPanel Grid.Row="2" Spacing="12" Margin="0,0,0,16">
            <TextBlock Text="{Binding L[TvSetup.SelectSeries]}"
                       FontSize="14"
                       Foreground="#555"
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <!-- Series E Button -->
                <Button Command="{Binding SelectSeriesECommand}"
                        Padding="16,12"
                        CornerRadius="8"
                        Cursor="Hand"
                        MinWidth="120"
                        Background="{Binding IsSeriesESelected, Converter={x:Static conv:BoolToColorConverter.Instance}, ConverterParameter=#3498DB;#E8E8E8}"
                        Foreground="{Binding IsSeriesESelected, Converter={x:Static conv:BoolToColorConverter.Instance}, ConverterParameter=#FFFFFF;#555555}">
                    <TextBlock Text="{Binding L[TvSetup.SeriesE]}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </Button>

                <!-- Series F Button -->
                <Button Command="{Binding SelectSeriesFCommand}"
                        Padding="16,12"
                        CornerRadius="8"
                        Cursor="Hand"
                        MinWidth="120"
                        Background="{Binding IsSeriesFSelected, Converter={x:Static conv:BoolToColorConverter.Instance}, ConverterParameter=#3498DB;#E8E8E8}"
                        Foreground="{Binding IsSeriesFSelected, Converter={x:Static conv:BoolToColorConverter.Instance}, ConverterParameter=#FFFFFF;#555555}">
                    <TextBlock Text="{Binding L[TvSetup.SeriesF]}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </Button>

                <!-- Series H Button -->
                <Button Command="{Binding SelectSeriesHCommand}"
                        Padding="16,12"
                        CornerRadius="8"
                        Cursor="Hand"
                        MinWidth="120"
                        Background="{Binding IsSeriesHSelected, Converter={x:Static conv:BoolToColorConverter.Instance}, ConverterParameter=#3498DB;#E8E8E8}"
                        Foreground="{Binding IsSeriesHSelected, Converter={x:Static conv:BoolToColorConverter.Instance}, ConverterParameter=#FFFFFF;#555555}">
                    <TextBlock Text="{Binding L[TvSetup.SeriesH]}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>

            <TextBlock Text="{Binding L[TvSetup.DontKnowSeries]}"
                       FontSize="12"
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>

            <!-- Scan for TVs button -->
            <Button Command="{Binding ScanForTvsCommand}"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0"
                    Padding="16,8"
                    Background="#27AE60"
                    Foreground="White"
                    CornerRadius="6"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ”" FontSize="14"/>
                    <TextBlock Text="{Binding L[TvSetup.ScanForTvs]}" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <!-- Detected TV info -->
            <Border Background="#E8F5E9"
                    CornerRadius="6"
                    Padding="12,8"
                    Margin="0,8,0,0"
                    IsVisible="{Binding DetectedTvInfo, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" MaxWidth="500">
                    <TextBlock Text="âœ“" Foreground="#27AE60" FontWeight="Bold"/>
                    <TextBlock Text="{Binding L[TvSetup.DetectedTv]}" Foreground="#2E7D32"/>
                    <TextBlock Text="{Binding DetectedTvInfo}" Foreground="#1B5E20" FontWeight="SemiBold"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Hint: Click Next to start server -->
        <Border Grid.Row="3"
                Background="#E3F2FD"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                <TextBlock Text="i"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#1565C0"/>
                <TextBlock Text="{Binding L[TvSetup.NextHint]}"
                           Foreground="#1565C0"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Steps List -->
        <ScrollViewer Grid.Row="4">
            <ItemsControl ItemsSource="{Binding Steps}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="10"
                                Padding="16"
                                Margin="0,0,0,8"
                                BoxShadow="0 1 4 0 #15000000">
                            <Grid ColumnDefinitions="Auto,*">
                                <!-- Step Number -->
                                <Border Background="#3498DB"
                                        CornerRadius="14"
                                        Width="28" Height="28"
                                        VerticalAlignment="Top"
                                        Margin="0,2,12,0">
                                    <TextBlock Text="{Binding Number}"
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Step Content -->
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="13"
                                               Foreground="#666"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</UserControl>
