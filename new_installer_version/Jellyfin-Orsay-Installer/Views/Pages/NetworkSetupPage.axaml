<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Jellyfin.Orsay.Installer.ViewModels.Pages"
             xmlns:models="using:Jellyfin.Orsay.Installer.Models"
             mc:Ignorable="d"
             x:Class="Jellyfin.Orsay.Installer.Views.Pages.NetworkSetupPage"
             x:DataType="vm:NetworkSetupPageViewModel">

    <Grid RowDefinitions="Auto,*" Margin="24">

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding L[Network.Title]}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,24"/>

        <!-- Content -->
        <StackPanel Grid.Row="1" Spacing="24">

            <!-- IP Selection -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="24"
                    BoxShadow="0 2 8 0 #20000000">
                <StackPanel Spacing="16">

                    <TextBlock Text="{Binding L[Network.SelectIp]}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"/>

                    <!-- IP Dropdown with grouped interfaces -->
                    <ComboBox ItemsSource="{Binding AvailableItems}"
                              SelectedItem="{Binding SelectedItem}"
                              MinHeight="48"
                              HorizontalAlignment="Stretch">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:NetworkListItem">
                                <Panel>
                                    <!-- Separator item -->
                                    <TextBlock Text="{Binding SeparatorText}"
                                               IsVisible="{Binding IsSeparator}"
                                               FontStyle="Italic"
                                               Foreground="#888"
                                               FontSize="12"
                                               Padding="0,4"/>
                                    <!-- Interface item -->
                                    <StackPanel Orientation="Horizontal" IsVisible="{Binding !IsSeparator}">
                                        <TextBlock Text="{Binding Interface.DisplayText}"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding $parent[UserControl].((vm:NetworkSetupPageViewModel)DataContext).L[Common.Recommended]}"
                                                   IsVisible="{Binding Interface.IsPreferred}"
                                                   Foreground="#27AE60"
                                                   FontWeight="SemiBold"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Panel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Selected IP (copyable) -->
                    <Border Background="#2C3E50"
                            CornerRadius="6"
                            Padding="12"
                            IsVisible="{Binding SelectedInterface, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <SelectableTextBlock Text="{Binding SelectedInterface.IpAddress}"
                                             FontSize="16"
                                             FontFamily="Consolas"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             SelectionBrush="#5078C0">
                            <SelectableTextBlock.ContextFlyout>
                                <MenuFlyout>
                                    <MenuItem Header="{Binding $parent[UserControl].((vm:NetworkSetupPageViewModel)DataContext).L[Common.Copy]}"
                                              Command="{Binding $parent[UserControl].((vm:NetworkSetupPageViewModel)DataContext).CopyIpCommand}"/>
                                </MenuFlyout>
                            </SelectableTextBlock.ContextFlyout>
                        </SelectableTextBlock>
                    </Border>

                    <!-- Refresh and Copy buttons -->
                    <Grid ColumnDefinitions="*,*">
                        <Button Grid.Column="0"
                                Content="{Binding L[Common.Refresh]}"
                                Command="{Binding RefreshInterfacesCommand}"
                                HorizontalAlignment="Left"
                                Padding="16,8"
                                Background="#E8E8E8"
                                Foreground="#555"
                                CornerRadius="6"/>
                        <Button Grid.Column="1"
                                Content="{Binding L[Common.Copy]}"
                                Command="{Binding CopyIpCommand}"
                                HorizontalAlignment="Right"
                                Padding="16,8"
                                Background="#E8E8E8"
                                Foreground="#555"
                                CornerRadius="6"
                                IsVisible="{Binding SelectedInterface, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                    </Grid>

                </StackPanel>
            </Border>

            <!-- Port Configuration -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="24"
                    BoxShadow="0 2 8 0 #20000000">
                <StackPanel Spacing="16">

                    <TextBlock Text="{Binding L[Network.Port]}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"/>

                    <NumericUpDown Value="{Binding Port}"
                                   Minimum="1"
                                   Maximum="65535"
                                   Increment="1"
                                   FormatString="0"
                                   Width="180"
                                   MinHeight="40"
                                   HorizontalAlignment="Left"
                                   FontSize="16"
                                   CornerRadius="6"/>

                    <TextBlock Text="{Binding L[Network.PortHint]}"
                               FontSize="12"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"/>

                </StackPanel>
            </Border>

            <!-- Hint -->
            <Border Background="#FFF3CD"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="i"
                               FontWeight="Bold"
                               Foreground="#856404"
                               FontSize="16"/>
                    <TextBlock Text="{Binding L[Network.SameNetworkHint]}"
                               Foreground="#856404"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

        </StackPanel>

    </Grid>
</UserControl>
